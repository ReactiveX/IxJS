{
  "extends": "../tsconfig.json",
  "include": ["../src/**/*.ts", "../test/**/*.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "rootDir": "../",
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "importHelpers": false,
    "noEmit": true,
    "noEmitHelpers": false,
    "noEmitOnError": false,
    "sourceMap": true,
    "inlineSources": false,
    "inlineSourceMap": false,
    "downlevelIteration": false,
    "baseUrl": "../",
    "paths": {
      "ix": ["src/Ix.node"],
      "ix/*": ["src/*"]
    }
  }
}
