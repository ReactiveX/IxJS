// Base TypeScript configuration for all targets' tests
{
  "extends": "../../tsconfig/tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": "../../",
    "allowJs": true,
    "declaration": false,
    "importHelpers": false,
    "noEmit": false,
    "noEmitHelpers": false,
    "noEmitOnError": false,
    "sourceMap": true,
    "inlineSources": false,
    "inlineSourceMap": false,
    "downlevelIteration": false,
    "esModuleInterop": true,
    "baseUrl": "../../",
    "paths": {
      "ix": ["src/node"],
      "ix/*": ["src/*"]
    }
  },
  "exclude": ["../../node_modules"],
  "include": ["../../src/**/*.ts"]
}
