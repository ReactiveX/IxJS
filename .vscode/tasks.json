{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "tsc",
            "command": "${workspaceRoot}/node_modules/.bin/tsc",
            "args": [
                "-w",
                "-p",
                "."
            ],
            "isShellCommand": true,
            "isBuildCommand": true,
            "isBackground": true,
            "echoCommand": true,
            "showOutput": "always",
            "problemMatcher": "$tsc-watch"
        }
    ]
}