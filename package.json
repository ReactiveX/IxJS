{
  "name": "ix",
  "version": "2.2.0",
  "description": "The Interactive Extensions for JavaScript",
  "scripts": {
    "lerna": "lerna",
    "commit": "git-cz",
    "test": "gulp test",
    "build": "gulp build",
    "clean": "gulp clean",
    "debug": "gulp debug",
    "lint": "run-p lint:*",
    "release": "./npm-release.sh",
    "doc": "shx rm -rf ./doc && esdoc",
    "commitmsg": "validate-commit-msg",
    "lint:src": "tslint --fix --type-check -p tsconfig.json -c tslint.json \"src/**/*.ts\"",
    "lint:spec": "tslint --fix --type-check -p spec/tsconfig.json -c tslint.json \"spec/**/*.ts\"",
    "prepublishOnly": "echo \"Error: do 'npm run release' instead of 'npm publish'\" && exit 1"
  },
  "author": "Matthew Podwysocki <matthewp@microsoft.com>",
  "homepage": "https://github.com/ReactiveX/IxJS#readme",
  "bugs": {
    "url": "https://github.com/ReactiveX/IxJS/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ReactiveX/IxJS.git"
  },
  "license": "MIT",
  "keywords": [
    "Iterator",
    "Iterable",
    "Promise",
    "Async",
    "AsyncIterable",
    "AsyncIterator"
  ],
  "files": [
    "targets",
    "LICENSE",
    "readme.md",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "tslib": "^1.7.1"
  },
  "devDependencies": {
    "@std/esm": "0.12.0",
    "@types/node": "8.0.45",
    "@types/tape": "4.2.30",
    "chalk": "2.3.0",
    "command-line-args": "4.0.7",
    "commitizen": "2.9.6",
    "conventional-changelog": "1.1.6",
    "conventional-commits-detector": "0.1.1",
    "conventional-github-releaser": "1.1.12",
    "conventional-recommended-bump": "1.0.2",
    "cz-conventional-changelog": "2.0.0",
    "del": "3.0.0",
    "esdoc": "1.0.3",
    "esdoc-standard-plugin": "1.0.0",
    "google-closure-compiler": "20170910.0.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-json-transform": "0.4.3",
    "gulp-rename": "1.2.2",
    "gulp-sourcemaps": "2.6.1",
    "gulp-typescript": "3.2.3",
    "husky": "0.14.3",
    "json": "9.0.6",
    "lerna": "2.4.0",
    "lint-staged": "4.3.0",
    "merge2": "1.2.0",
    "mkdirp": "0.5.1",
    "npm-run-all": "4.1.1",
    "pre-git": "3.15.3",
    "prettier": "1.7.4",
    "pump": "1.0.2",
    "rimraf": "2.6.2",
    "rxjs": "5.5.1",
    "shx": "0.2.2",
    "source-map-loader": "0.2.3",
    "spawn-rx": "2.0.12",
    "tap-difflet": "0.7.0",
    "tape-async": "2.3.0",
    "trash": "4.1.0",
    "ts-node": "3.3.0",
    "tsickle": "0.23.3",
    "tslint": "5.8.0",
    "tsutils": "2.12.1",
    "typescript": "2.5.3",
    "uglifyjs-webpack-plugin": "1.0.0",
    "validate-commit-msg": "2.14.0",
    "webpack": "3.8.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "pre-git": {
      "pre-commit": [
        "npx lint-staged"
      ],
      "pre-push": [],
      "post-commit": [],
      "post-checkout": [],
      "post-merge": []
    }
  },
  "lint-staged": {
    "*.@(ts)": [
      "prettier --config .prettierrc --write",
      "tslint --fix",
      "git add"
    ]
  },
  "esdoc": {
    "source": "./targets/es2015/esm",
    "destination": "./doc",
    "test": {
      "type": "tape",
      "source": "./spec"
    },
    "experimentalProposal": {
      "asyncGenerators": true
    }
  },
  "greenkeeper": {
    "ignore": [
      "tsickle"
    ]
  },
  "release": {
    "analyzeCommits": "simple-commit-message"
  }
}
