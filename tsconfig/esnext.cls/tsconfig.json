{
  "extends": "../tsconfig.base.json",
  "exclude": ["../../node_modules"],
  "include": ["../../src/**/*.ts"],
  "angularCompilerOptions": {
    "skipMetadataEmit": true,
    "annotationsAs": "static fields",
    "annotateForClosureCompiler": true
  },
  "formatCodeOptions": {
    "tabSize": 2,
    "indentSize": 2
  },
  "compilerOptions": {
    "importHelpers": false,
    "noEmitHelpers": true,
    "target": "ESNEXT",
    "module": "commonjs",
    "outDir": "../../targets/esnext/cls",
    "declarationDir": "../../targets/esnext/cls/types"
  }
}
