{
  "extends": "./tsconfig/tsconfig.base.json",
  "formatCodeOptions": {
    "tabSize": 2,
    "indentSize": 2
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "ix": ["src/node"],
      "ix/*": ["src/*"]
    },
    "allowImportingTsExtensions": true,
  },
  "include": ["src/**/*.ts", "spec/**/*.ts"],
  "ts-node": {
    "swc": true
  }
}
